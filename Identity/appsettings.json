{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ServiceSettings": {
    "ServiceName": "Identity"
  },
  "MongoDbSettings": {
    "Host": "localhost",
    "Port": 27017
  },
  "IdentitySettings": {
    "AdminUserEmail": "admin@diglib.com",
    "StartingPoints": 100
  },
  "IdentityServerSettings": {
    "ApiScopes": [
      {
        "Name": "catalog.fullaccess"
      },
      {
        "Name": "catalog.readaccess"
      },
      {
        "Name": "catalog.writeaccess"
      },
      {
        "Name": "inventory.fullaccess"
      },
      {
        "Name": "IdentityServerApi"
      }
    ],
    "ApiResources": [
      {
        "Name": "Catalog",
        "Scopes": [
          "catalog.fullaccess",
          "catalog.readaccess",
          "catalog.writeaccess"
        ],
        "UserClaims": [ "role" ]
      },
      {
        "Name": "Inventory",
        "Scopes": [ "inventory.fullaccess" ],
        "UserClaims": [ "role" ]
      },
      {
        "Name": "IdentityServerApi",
        "Scopes": [ "IdentityServerApi" ],
        "UserClaims": [ "role" ]
      }
    ]
  },
  "AllowedHosts": "*"
}